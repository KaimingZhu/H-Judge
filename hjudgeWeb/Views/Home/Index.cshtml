@{
    ViewData["Title"] = "欢迎";
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/site.min.css" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="https://cdn.hjudge.com/hjudge/css/site.min.css" asp-fallback-href="~/css/site.min.css" />
</environment>

<div id='app-root'>
    <div class="preloader">
        <div class="loader loader1"></div>
        <p>H::Judge 正在加载中...</p>
    </div>
</div>

@section scripts{
    <environment include="Development">
        <script type="text/javascript" src="~/dist/main.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="https://cdn.hjudge.com/hjudge/dist/main.js" asp-append-version="true" asp-fallback-src="~/dist/main.js"></script>
    </environment>
}